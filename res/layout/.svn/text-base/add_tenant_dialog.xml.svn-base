<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <EditText
        android:id="@+id/enter_tenant_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/enter_tenant_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_tenant_name"
        android:layout_marginRight="5dp"
        android:hint="Phone"
        android:inputType="phone" />

    <EditText
        android:id="@+id/enter_tenant_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_tenant_phone"
        android:layout_marginRight="5dp"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/dialog_tenant_button_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/enter_tenant_email"
        android:layout_marginTop="22dp"
        android:text="@string/ok" />
    
</RelativeLayout>