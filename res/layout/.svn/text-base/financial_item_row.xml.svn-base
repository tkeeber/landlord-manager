<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/background_rounded_corners"
    android:minHeight="?android:attr/listPreferredItemHeight" >
    
     <TextView
        android:id="@+id/financial_amount_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:focusable="false"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
     
     <TextView
        android:id="@+id/financial_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/title"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:focusable="false"
        android:text="3.00"
        android:textStyle="bold"
        android:layout_toRightOf="@id/financial_amount_sign"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/financial_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/title"
        android:clickable="false"
        android:focusable="false"
        android:text="Insurance"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/financial_amount"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/financial_time_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/financial_amount"
        android:layout_alignParentLeft="true"
        android:layout_toRightOf="@+id/financial_type"
        android:text="Per Month"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>