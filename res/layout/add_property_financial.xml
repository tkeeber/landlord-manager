<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_property_title_financial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/title_financial_property_info"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/financial_list"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_above="@+id/financial_add"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_property_title_financial"
        android:divider="@android:color/transparent"
        android:dividerHeight="5.0sp"
        android:minHeight="20dp"
        android:padding="2dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical" >
    </ListView>

    <Button
        android:id="@+id/financial_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Add Outgoing" />

</RelativeLayout>